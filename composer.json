{
    "name": "pointybeard/symext-api-framework",
    "description": "JSON renderer and event driven controller interface to help rapidly prototype and build RESTful APIs in Symphony CMS",
    "homepage": "http://alannahkearney.com",
    "license": "MIT",
    "minimum-stability": "stable",
    "type": "library",
    "keywords": [
        "php",
        "symphony",
        "symphonycms",
        "symphony extension",
        "symphonycms extension",
        "restful",
        "json"
    ],
    "authors": [
        {
            "name": "Alannah Kearney",
            "email": "hi@alannahkearney.com",
            "homepage": "http://alannahkearney.com",
            "role": "Developer"
        }
    ],
    "support": {
      "issues": "https://github.com/pointybeard/api_framework/issues",
      "wiki": "https://github.com/pointybeard/api_framework/wiki"
    },
    "repositories": [
        {
            "type": "git",
            "url": "https://github.com/pointybeard/symphony-extended.git"
        }
    ],
    "require": {
        "php": ">=7.4",
        "m1x0n/opis-json-schema-error-presenter": "^0.5.2",
        "opis/json-schema": "^1.0",
        "pointybeard/helpers": "~1.2.0",
        "pointybeard/symphony-classmapper": "~2.0",
        "pointybeard/symphony-extended": "dev-feature-middleware",
        "pointybeard/symphony-pdo": "~0.1.7.0",
        "symfony/http-foundation": "~4.2.0"
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "~3.0",
        "friendsofphp/php-cs-fixer": "~3.0",
        "php-mock/php-mock-prophecy": "^0.0.2",
        "damianopetrungaro/php-commitizen": "^0.1.2",
        "php-parallel-lint/php-parallel-lint": "^1.2"
    },
    "autoload": {
        "psr-4": {
            "pointybeard\\Symphony\\Extensions\\": "src",
            "pointybeard\\Symphony\\Extensions\\Api_Framework\\Controllers\\": "../../workspace/controllers"
        },
        "files": [
            "src/Includes/Renderer.php"
        ]
    },
    "scripts": {
        "post-update-cmd": "mkdir -p commands",
        "tidy": "php-cs-fixer fix -v --using-cache=no",
        "tidyDry": "@tidy --dry-run",
        "test": [
            "parallel-lint . --exclude vendor",
            "phpunit"
        ],
        "clean": "rm -rf commands vendor"
    },
    "config": {
        "sort-packages": true,
        "process-timeout": 0
    }
}
